<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:MobileApp"
             x:Class="MobileApp.MainPage">
    <StackLayout Orientation="Vertical" Spacing="1">
	<Label Text="Industry Salon" />
    <Button x:Name="myAppointmentsButton" Text="My Appointments" IsEnabled="true" Clicked="onMyAppointmentsClicked" />
    <Button x:Name="newAppointmentButton" Text="New Appointment" IsEnabled="true" Clicked="onNewAppointmentClicked" />
    <Button x:Name="contactUsButton" Text="Contact Industry Salon" IsEnabled="true" Clicked="onContactUsClicked" />
    </StackLayout>
</ContentPage>
